#set($chatUser = $chatManager.getChatUser($remoteUser))
#set($pref = $chatUser.getPreferences())
#set($status = $chatUser.getStatus().toString())


#set($onlineOffline = "online")

#if($status == "xa")
#set($onlineOffline = "offline")
#end


<div id="chatbar" class="$onlineOffline">
    #if($chatManager.getChatConfiguration().getPlaySound())
    <audio id="chatsound" >
        <source src="$req.contextPath/download/resources/confluence.chat/button-9.m4a" type="audio/x-aac" />
        <source src="$req.contextPath/download/resources/confluence.chat/button-9.mp3" type="audio/mpeg" />
        <source src="$req.contextPath/download/resources/confluence.chat/button-9.ogg" type="audio/ogg" />
        <p>Dieser Browser unterst√ºtzt HTML5 audio nicht</p>
    </audio>
    #end
    <div id="chatbar-status" class="$status">
        <fieldset class="parameters hidden">
            <input type="hidden" name="chat-playSound" id="chat-version" value="$chatManager.getPlaySound()" />
            <input type="hidden" name="chat-version" id="chat-version" value="$chatManager.getVersion()" />
            <input type="hidden" name="chat-debugMode" id="chat-version" value="$chatManager.getChatConfiguration().getDebugMode()" />
            <input type="hidden" name="chat-hideInEditMode" id="chat-version" value="$chatManager.getChatConfiguration().getHideInEditMode()" />
        </fieldset>
        <div id="chatbar-buttons">
            <div id="chatbar-button-config">&nbsp;</div>
            <div id="chatbar-button-online">
                #if($chatManager.getChatConfiguration().getPlaySound())
                        <div class="csound"></div>
                #end
                <div class="online">
                    Online Users (<span>$chatManager.getOnlineUsers().size()</span>)
                    
                </div>
                <div class="offline">
                    You are offline
                </div>
                
            </div>
            <br style="clear: both; " />
        </div>
        <div id="chatbar-online-users" class="chatbar-box">
            <div class="cb-head">
                <div class="cb-opt">
                    <a  href="#">X</a>
                </div>
                <div class="cb-title">Contacts</div>

            </div>
            <div id="chatbar-online-users-list" class="chatbar-box-content">
                <div class="chat-user" >
                    <div>
                        <!--                        <img src="/images/icons/profilepics/default.gif" />-->
                        <div class="chat-user-info">
                            <span class="is">admin</span>
                            <!-- <div class="chat-user-status">&#8220;<span>status</span>&#8221;</div> -->
                            <div class="chat-where"><a class="icon icon-page" href="#" ></a><span></span></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="chatbar-config" class="chatbar-box">
            <div class="cb-head">
                <div class="cb-opt">
                    <a  href="#">X</a>
                </div>
                <div class="cb-title">Configuration</div>

            </div>
            <div  class="chatbar-box-content chat-options">
                <select name="status">
                    <option  value="chat" #if($status == "chat") selected="selected" #end >Online</option>
                    <option  value="away" #if($status == "away") selected="selected" #end >Away</option>
                    <option  value="dnd" #if($status == "dnd") selected="selected" #end >Do not disturb</option>
                    <option  value="xa" #if($status == "xa") selected="selected" #end>Offline</option>
                </select>
                <br/>
            </div>   
        </div>
    </div>
</div>
#end